@page
@model JonaDemo.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout_Login";
}
 
  

<div class="wrapper fadeInDown justify-content-center d-flex">
    <div id="formContent" class="col-md-4 col-sm-8 col-12 card_login pt-2">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <h3 class="text-center">Sing In</h3>
        </div>

        @if(Model.error != null && Model.error != "")
        {
            <div class="row">
                <div class="col-12">
                    <p class="text-danger">@Model.error</p>
                </div>
            </div>

        }
        
        <!-- Login Form -->
        <form method="post">
            <div class="row">

                <div class="col-12">
                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="user.Email" class="form-control" />
                        <span asp-validation-for="user.Email"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="user.Password" class="form-control" />
                        <span asp-validation-for="user.Password"></span>
                    </div>
                </div>


                <div class="col-12">
                    <div class="form-group">
                        <button class="btn btn-success btn-block" type="submit">Sign In</button>
                    </div>
                </div>

                <div class="col-12 text-center">
                    <div class="form-group">
                        <small>If you don't have account yet.<a asp-page="/Account/Register"> Click here to sign up</a></small>
                    </div>
                </div>

            </div> 
        </form>
 
    </div>
</div>
 