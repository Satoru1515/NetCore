@page
@model JonaDemo.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout_Login";
}
 
 

<div class="wrapper fadeInDown justify-content-center d-flex">
    <div id="formContent" class="col-md-4 col-sm-8 col-12 card_login pt-2">
        
        <h3 class="text-center">Sing Up</h3>
         
        <form method="post">
             <div asp-validation-summary="All" class="text-danger"></div>
             <div class="row">

                 <div class="col-6">
                     <div class="form-group">
                         <label>Name</label>
                         <input asp-for="user.Name" class="form-control" />
                         <span asp-validation-for="user.Name"></span>
                     </div>
                 </div>

                 <div class="col-6">
                     <div class="form-group">
                         <label>LastName</label>
                         <input asp-for="user.LastName" class="form-control" />
                         <span asp-validation-for="user.LastName"></span>
                     </div>
                 </div>

                 <div class="col-12">
                     <div class="form-group">
                         <label>Email</label>
                         <input asp-for="user.Email" class="form-control" />
                         <span asp-validation-for="user.Email"></span>
                     </div>
                 </div>

                 <div class="col-12">
                     <div class="form-group">
                         <label>Password</label>
                         <input asp-for="user.Password" class="form-control" />
                         <span asp-validation-for="user.Password"></span>
                     </div>
                 </div>


                 <div class="col-12">
                     <div class="form-group">
                         <button class="btn btn-success btn-block" type="submit">SUBMIT</button>
                     </div>
                 </div>

                 <div class="col-12 text-center">
                     <div class="form-group">
                         <small>I already have an account.<a asp-page="/Account/Login"> Click here to sign in.</a></small>
                     </div>
                 </div>
             </div> 
        </form>
 
    </div>
</div>
 