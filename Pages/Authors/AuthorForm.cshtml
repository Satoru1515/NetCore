@page
@model JonaDemo.AuthorFormModel
@{
    ViewData["Title"] = "AuthorForm";
}

<div class="card">

    <div class="card-header">
        <div class="row">
            <div class="col-2">
                <a asp-page="/Authors/AuthorList" class="btn btn-light"><i class="fa fa-arrow-left"></i> Back</a>
            </div>

            <div class="col-8 text-center">
                <h2>Author Form</h2>
            </div>

        </div>
    </div>

    <div class="card-body">
        <form method="post" enctype="multipart/form-data">

            <div class="row clearfix">

                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input class="form-control" asp-for="@Model.author.Name" />
                        <span asp-validation-for="@Model.author.Name"></span>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="cover_book" class="cmt-4">Author image:</label>
                        <input id="cover_book" type="file" class=" form-control input-post-cover" asp-for="@Model.author.ProfileImage" />
                        <span asp-validation-for="@Model.author.ProfileImage"></span>
                    </div>
                </div>
            </div>

            <div class="row clearfix mt-4">

                <div class="col-12">
                    <div class="form-group">
                        <button class="btn btn-success btn-block">SUBMIT</button>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

